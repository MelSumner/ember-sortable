<article class="demo">
  <header>
    <h2>Ember Sortable</h2>
  </header>

  <main>
    <section class="vertical-demo">
      <h3>Vertical</h3>

      <Sortable
        @onChange={{action "update"}}
        @model={{model.items}} as |sortable|
       >
        <ol data-test-vertical-demo-group
          {{sortable-group api=sortable.api
            a11yAnnouncementConfig=this.a11yAnnouncementConfig
            a11yItemName="spanish number"
            itemVisualClass=this.itemVisualClass
            handleVisualClass=this.handleVisualClass
          }}
        >
          {{#each sortable.model as |item|}}
            <li data-test-vertical-demo-item {{sortable-item api=sortable.api model=item}}>
              {{item}}
              <span class="handle" data-test-vertical-demo-handle {{sortable-handle api=sortable.api model=item}} data-item={{item}}>
                <span>&vArr;</span>
              </span>
            </li>
          {{/each}}
        </ol>
      </Sortable>
    </section>

    <section class="vertical-demo">
      <h3>Vertical with different sized models and inputs</h3>

      <Sortable
        @onChange={{action "updateDifferentSizedModels"}}
        @model={{model.differentSizedModels}} as |sortable|
      >
        <ol data-test-vertical-demo-group >
          {{#each sortable.model as |item|}}
            <li data-test-vertical-demo-item class="word-break" {{sortable-item api=sortable.api model=item}}>
              <label for="demo-input">{{item}}</label>
              <input id="demo-input" type="text">
              <span data-item={{item}} data-test-vertical-demo-handle class="handle" {{sortable-handle}}>
                <span>&vArr;</span>
              </span>
            </li>
          {{/each}}
        </ol>
      </Sortable>
    </section>

    <section class="horizontal-demo">
      <h3>Horizontal</h3>

      <Sortable
        @direction={{"x"}}
        @onChange={{action "update"}}
        @model={{model.items}} as |sortable|
      >
        <ol data-test-horizontal-demo-group
          {{sortable-group api=sortable.api
            itemVisualClass=this.itemVisualClass
            handleVisualClass=this.handleVisualClass
          }}
        >
          {{#each sortable.model as |item|}}
            <li data-test-horizontal-demo-handle tabindex={{"0"}} {{sortable-item api=sortable.api model=item}}>
              {{item-presenter item=item}}
            </li>
          {{/each}}
        </ol>
      </Sortable>

    </section>

    <section class="table-demo">
      <h3>Table</h3>

      {{! template-lint-disable table-groups}}
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Item</th>
          </tr>
        </thead>
        <tbody>
          <Sortable
            @onChange={{action "update"}}
            @model={{model.items}} as |sortable|
          >
            {{#each sortable.model as |item|}}
              <tr data-test-table-demo-item class="handle" {{sortable-item api=sortable.api model=item }}>
                <td><span data-test-table-demo-handle data-item={{item}} class="handle">&vArr;</span></td>
                <td>{{item}}</td>
              </tr>
            {{/each}}
          </Sortable>
        </tbody>
      </table>
    </section>

    <section class="vertical-spacing-demo">
      <h3>Vertical with 15px spacing</h3>

      <Sortable
        @onChange={{action "update"}}
        @model={{model.items}} as |sortable|
      >
        <ol >
          {{#each sortable.model as |item|}}
            <li {{sortable-item api=sortable.api model=item spacing=15}} tabindex="0">
              {{item}}
              <span data-test-vertical-spacing-demo-handle data-item={{item}}>
              </span>
            </li>
          {{/each}}
        </ol>
      </Sortable>
    </section>

    <section class="vertical-distance-demo">
      <h3>Vertical with distance set to 15</h3>

      <Sortable
        @onChange={{action "update"}}
        @model={{model.items}} as |sortable|
      >
        <ol >
          {{#each sortable.model as |item|}}
            <li data-test-vertical-distance-demo-handle {{sortable-item api=sortable.api model=item distance=15}} tabindex="0">
              {{item}}
              <span data-item={{item}}>
              </span>
            </li>
          {{/each}}
        </ol>
      </Sortable>
    </section>

    <section class="scrollable-demo">
      <h3>Scrollable</h3>

      <div class="sortable-container">
        <Sortable
          @onChange={{action "update"}}
          @model={{model.items}} as |sortable|
        >
          <ol >
            {{#each sortable.model as |item|}}
              <li data-test-scrollable-demo-handle {{sortable-item api=sortable.api model=item}}>
                {{item}}
                <span class="handle" data-item={{item}} {{sortable-handle}}>
                  <span>&vArr;</span>
                </span>
              </li>
            {{/each}}
          </ol>
        </Sortable>
      </div>
    </section>

    {{#if model.dragged}}
      <p>Just dragged {{model.dragged}}</p>
    {{/if}}
  </main>

  <footer>
    <p>
      <a href="https://github.com/adopted-ember-addons/ember-sortable">View on GitHub</a>
    </p>
  </footer>
</article>
